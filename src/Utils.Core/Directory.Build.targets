<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <Target Name="DllCopy" AfterTargets="AfterBuild" Condition="Exists('$(OutputPath)/AndanteTribe.Utils.Core.dll')">
        <Message Text="OutputPath : $(OutputPath)" Importance="high" />
        <Message Text="MSBuildThisFileDirectory : $(MSBuildThisFileDirectory)" Importance="high" />
        <Copy SourceFiles="$(OutputPath)/AndanteTribe.Utils.Core.dll" DestinationFolder="$(MSBuildThisFileDirectory)../../bin" SkipUnchangedFiles="true" />
    </Target>
</Project>